# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
DATABASE_USER=tu_usuario
DATABASE_PASSWORD=tu_password_segura
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=hive_mining_db

# URL completa (alternativa)
# DATABASE_URL=mysql+mysqlconnector://user:pass@localhost:3306/hive_mining_db

# ============================================
# SEGURIDAD
# ============================================
# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CAMBIAR_POR_CLAVE_ALEATORIA_DE_64_CARACTERES

# ============================================
# FLASK
# ============================================
FLASK_APP=run.py
FLASK_ENV=production
FLASK_DEBUG=False

# ============================================
# GOOGLE SHEETS
# ============================================
GOOGLE_SHEETS_CREDENTIALS=/ruta/segura/credentials.json
SPREADSHEET_NAME=Planilla de Diagnóstico Hive

# ============================================
# REDIS (CACHÉ Y SESIONES)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# GUNICORN
# ============================================
GUNICORN_WORKERS=9
GUNICORN_TIMEOUT=120
GUNICORN_BIND=0.0.0.0:5000
